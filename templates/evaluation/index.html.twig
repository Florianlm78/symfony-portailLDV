{% extends 'base.html.twig' %}

{% block title %}Hello EvaluationController!{% endblock %}

{% block body %}


<p>You are logged in as {{ app.user.classe }}</p>




{% if is_granted('ROLE_PROF') == true %}

<h1>Ajouter une note</h1>
{{form(ajout)}}

 <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th> Nom </th>
                <th> Prenom</th> 
                <th> Classe</th>                 
            </tr>
        </thead>
        <tbody>

        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.classe }}</td> 
                <td><a href="{{ path('notation_show', {'id': user.id}) }}"> Voir Note </a> </td>            
            </tr>
        {% else %}
            <tr>
                <td colspan="6"> non </td>
            </tr>


        {% endfor %}
        </tbody>
    </table>


{% endif %}


{% if is_granted('ROLE_ADMIN') == true %}
<h2>Ajouter un cours</h2>
{{ form(ajoutCours) }}           
 {% endif %}







{% endblock %}
